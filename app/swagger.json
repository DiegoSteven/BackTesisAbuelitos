{
  "openapi": "3.0.0",
  "info": {
    "title": "API Abuelitos - Juegos Cognitivos",
    "description": "API REST para juegos cognitivos adaptados para adultos mayores. Incluye sistema de usuarios y juego de formación de palabras (Abecedario) con niveles adaptativos basados en IA.",
    "version": "1.0.0",
    "contact": {
      "name": "Tesis Abuelitos",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Servidor de desarrollo local"
    }
  ],
  "tags": [
    {
      "name": "Usuarios",
      "description": "Endpoints de gestión de usuarios"
    },
    {
      "name": "Abecedario",
      "description": "Juego de formación de palabras con niveles adaptativos"
    },
    {
      "name": "Memory Game",
      "description": "Juego de memoria con parejas adaptativas"
    },
    {
      "name": "Paseo",
      "description": "Juego del paseo con niveles progresivos"
    },
    {
      "name": "Train Game",
      "description": "Juego de trenes con reconocimiento de patrones"
    },
    {
      "name": "Admin",
      "description": "Endpoints administrativos para consultar estadísticas y sesiones"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Registrar nuevo usuario",
        "description": "Crea un nuevo usuario en el sistema",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              },
              "example": {
                "nombre": "usuario1",
                "password": "password123",
                "edad": 65,
                "genero": "M"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error en los datos enviados"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Iniciar sesión",
        "description": "Autentica un usuario y devuelve sus datos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              },
              "example": {
                "nombre": "usuario1",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Credenciales inválidas"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Listar todos los usuarios",
        "description": "Obtiene la lista completa de usuarios registrados",
        "responses": {
          "200": {
            "description": "Lista de usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserList"
                }
              }
            }
          }
        }
      }
    },
    "/memory-game/config/{user_id}": {
      "get": {
        "tags": ["Memory Game"],
        "summary": "Obtener configuración del juego de memoria",
        "description": "Obtiene la configuración actual adaptativa para el usuario",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del usuario"
          }
        ],
        "responses": {
          "200": {
            "description": "Configuración obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "current_config": {
                          "type": "object",
                          "properties": {
                            "num_pairs": {
                              "type": "integer",
                              "description": "Número de parejas en el juego"
                            },
                            "time_limit": {
                              "type": "integer",
                              "description": "Tiempo límite en segundos"
                            },
                            "flip_delay": {
                              "type": "number",
                              "description": "Retraso antes de voltear cartas (ms)"
                            }
                          }
                        },
                        "total_games": {
                          "type": "integer"
                        },
                        "avg_accuracy": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory-game/submit-results": {
      "post": {
        "tags": ["Memory Game"],
        "summary": "Enviar resultados de partida",
        "description": "Envía los resultados de una partida y recibe análisis de IA con nueva configuración adaptativa",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["user_id", "session_data"],
                "properties": {
                  "user_id": {
                    "type": "integer"
                  },
                  "session_data": {
                    "type": "object",
                    "properties": {
                      "num_pairs": {
                        "type": "integer"
                      },
                      "time_limit": {
                        "type": "integer"
                      },
                      "flip_delay": {
                        "type": "number"
                      },
                      "completed": {
                        "type": "boolean"
                      },
                      "time_taken": {
                        "type": "number"
                      },
                      "attempts": {
                        "type": "integer"
                      },
                      "correct_matches": {
                        "type": "integer"
                      },
                      "failed_attempts": {
                        "type": "integer"
                      }
                    }
                  }
                }
              },
              "example": {
                "user_id": 1,
                "session_data": {
                  "num_pairs": 6,
                  "time_limit": 60,
                  "flip_delay": 1000,
                  "completed": true,
                  "time_taken": 45.5,
                  "attempts": 15,
                  "correct_matches": 6,
                  "failed_attempts": 3
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultados procesados exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "ia_analysis": {
                          "type": "object"
                        },
                        "next_config": {
                          "type": "object"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
