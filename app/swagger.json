    "/abecedario/daily-summary/{user_id}": {
      "get": {
        "tags": ["Abecedario"],
        "summary": "Resumen diario",
        "description": "Obtiene resumen de sesiones de un día específico. Si no se especifica fecha, usa el día actual.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del usuario"
          },
          {
            "name": "fecha",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Fecha en formato YYYY-MM-DD",
            "example": "2025-11-16"
          }
        ],
        "responses": {
          "200": {
            "description": "Resumen del día",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DailySummaryResponse"
                }
              }
            }
          },
          "400": {
            "description": "Formato de fecha inválido"
          }
        }
      }
    },
    "/abecedario/history/{user_id}": {
      "get": {
        "tags": ["Abecedario"],
        "summary": "Historial de sesiones",
        "description": "Obtiene el historial de sesiones. Sin parámetros devuelve las últimas 20 sesiones. Con fecha_inicio y fecha_fin filtra por rango.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del usuario"
          },
          {
            "name": "fecha_inicio",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Fecha de inicio (YYYY-MM-DD)",
            "example": "2025-11-01"
          },
          {
            "name": "fecha_fin",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Fecha de fin (YYYY-MM-DD)",
            "example": "2025-11-16"
          }
        ],
        "responses": {
          "200": {
            "description": "Historial de sesiones",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HistoryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/abecedario/evolution/{user_id}": {
      "get": {
        "tags": ["Abecedario"],
        "summary": "Reporte de evolución",
        "description": "Obtiene reporte agrupado por fecha y nivel de dificultad. Muestra la progresión del usuario a través de los niveles con métricas promedio.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del usuario"
          }
        ],
        "responses": {
          "200": {
            "description": "Reporte de evolución",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EvolutionResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRegister": {
        "type": "object",
        "required": ["nombre", "password", "edad", "genero"],
        "properties": {
          "nombre": {
            "type": "string",
            "description": "Nombre de usuario único"
          },
          "password": {
            "type": "string",
            "description": "Contraseña del usuario"
          },
          "edad": {
            "type": "integer",
            "description": "Edad del usuario"
          },
          "genero": {
            "type": "string",
            "enum": ["M", "F"],
            "description": "Género del usuario (M o F)"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["nombre", "password"],
        "properties": {
          "nombre": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "nombre": {
                "type": "string"
              },
              "edad": {
                "type": "integer"
              },
              "genero": {
                "type": "string"
              }
            }
          }
        }
      },
      "UserList": {
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "nombre": {
                  "type": "string"
                },
                "edad": {
                  "type": "integer"
                },
                "genero": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "ChallengeResponse": {
        "type": "object",
        "properties": {
          "challenge": {
            "type": "object",
            "properties": {
              "palabra_objetivo": {
                "type": "string",
                "description": "Palabra que el usuario debe formar (siempre en MAYÚSCULAS)"
              },
              "letras_distractoras": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Letras adicionales para aumentar dificultad"
              },
              "pista_contextual": {
                "type": "string",
                "description": "Pista que ayuda a adivinar la palabra (solo visible en nivel difícil)"
              },
              "nivel_dificultad": {
                "type": "string",
                "enum": ["facil", "intermedio", "dificil"],
                "description": "Nivel de dificultad del desafío"
              },
              "progreso_nivel": {
                "type": "object",
                "properties": {
                  "palabras_completadas": {
                    "type": "integer",
                    "description": "Palabras completadas en el nivel actual"
                  },
                  "palabras_requeridas": {
                    "type": "integer",
                    "description": "Palabras necesarias para avanzar de nivel (siempre 5)"
                  },
                  "porcentaje": {
                    "type": "number",
                    "description": "Porcentaje de progreso en el nivel"
                  }
                }
              }
            }
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SessionData": {
        "type": "object",
        "required": ["user_id", "palabra_objetivo", "tiempo_resolucion", "cantidad_errores", "pistas_usadas", "completado", "nivel_dificultad"],
        "properties": {
          "user_id": {
            "type": "integer",
            "description": "ID del usuario"
          },
          "palabra_objetivo": {
            "type": "string",
            "description": "Palabra que se intentó formar"
          },
          "tiempo_resolucion": {
            "type": "number",
            "description": "Tiempo en segundos que tomó completar"
          },
          "cantidad_errores": {
            "type": "integer",
            "description": "Número de intentos incorrectos"
          },
          "pistas_usadas": {
            "type": "integer",
            "description": "Cantidad de pistas utilizadas (0 o 1)"
          },
          "completado": {
            "type": "boolean",
            "description": "Si se completó exitosamente la palabra"
          },
          "nivel_dificultad": {
            "type": "string",
            "enum": ["facil", "intermedio", "dificil"],
            "description": "Nivel en el que se jugó (debe coincidir con el recibido en /next-challenge)"
          }
        }
      },
      "SessionResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "session": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "user_id": {
                "type": "integer"
              },
              "palabra_objetivo": {
                "type": "string"
              },
              "longitud_palabra": {
                "type": "integer"
              },
              "tiempo_resolucion": {
                "type": "number"
              },
              "cantidad_errores": {
                "type": "integer"
              },
              "pistas_usadas": {
                "type": "integer"
              },
              "completado": {
                "type": "boolean"
              },
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "fecha_juego": {
                "type": "string",
                "format": "date"
              }
            }
          }
        }
      },
      "StatsResponse": {
        "type": "object",
        "properties": {
          "stats": {
            "type": "object",
            "properties": {
              "promedio_tiempo": {
                "type": "number",
                "description": "Tiempo promedio de resolución en segundos"
              },
              "promedio_errores": {
                "type": "number",
                "description": "Promedio de errores por sesión"
              },
              "tasa_exito": {
                "type": "number",
                "description": "Porcentaje de palabras completadas exitosamente"
              },
              "total_sesiones": {
                "type": "integer",
                "description": "Total de sesiones jugadas"
              },
              "completadas": {
                "type": "integer",
                "description": "Sesiones completadas exitosamente"
              },
              "ultima_palabra": {
                "type": "string",
                "description": "Última palabra jugada"
              },
              "tendencia": {
                "type": "string",
                "enum": ["mejorando", "empeorando", "estable", "insuficientes_datos"],
                "description": "Tendencia de rendimiento"
              },
              "sesion_reciente_dificil": {
                "type": "boolean",
                "description": "Si hubo sesión con 8+ errores en las últimas 3"
              }
            }
          }
        }
      },
      "DailySummaryResponse": {
        "type": "object",
        "properties": {
          "fecha": {
            "type": "string",
            "format": "date"
          },
          "total_palabras": {
            "type": "integer"
          },
          "palabras_completadas": {
            "type": "integer"
          },
          "tiempo_total": {
            "type": "number"
          },
          "errores_totales": {
            "type": "integer"
          },
          "promedio_tiempo": {
            "type": "number"
          },
          "sesiones": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "HistoryResponse": {
        "type": "object",
        "properties": {
          "sesiones": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "EvolutionResponse": {
        "type": "object",
        "properties": {
          "total_sesiones": {
            "type": "integer"
          },
          "evolucion": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fecha": {
                  "type": "string",
                  "format": "date"
                },
                "nivel": {
                  "type": "string",
                  "enum": ["FACIL", "INTERMEDIO", "DIFICIL"]
                },
                "total_palabras": {
                  "type": "integer"
                },
                "completadas": {
                  "type": "integer"
                },
                "tiempo_total": {
                  "type": "number"
                },
                "errores_totales": {
                  "type": "integer"
                },
                "pistas_usadas": {
                  "type": "integer"
                },
                "promedio_tiempo": {
                  "type": "number"
                },
                "promedio_errores": {
                  "type": "number"
                },
                "tasa_exito": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}
